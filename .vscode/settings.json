// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/*ypings*": true,
        "src/**/*.js": {
            "when": "$(basename).ts"
        },
        "spec/**/*.js": {
            "when": "$(basename).ts"
        },
        "rules/**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true
    },
    "typescript.tsdk": "node_modules/typescript/lib"
}
